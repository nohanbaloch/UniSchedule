{
  "name": "unischedule",
  "version": "1.0.1",
  "license": "MIT",
  "author": "Mehrtek",
  "main": "main.js",
  "scripts": {
    "build": "npm run build:css",
    "build:css": "tailwindcss -i src/css/input.css -o src/css/style.css",
    "watch:css": "tailwindcss -i src/css/input.css -o src/css/style.css --watch",
    "start": "electron .",
    "dev": "concurrently \"npm run watch:css\" \"npm start\"",
    "serve": "npx serve .",
    "dist": "npm run build:css && electron-builder",
    "pack": "npm run build:css && electron-builder --dir"
  },
  "build": {
    "appId": "com.unischedule.desktop",
    "productName": "UniSchedule",
    "directories": {
      "output": "release"
    },
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "UniSchedule"
    }
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.18",
    "@tailwindcss/postcss": "^4.1.18",
    "concurrently": "^9.2.1",
    "electron": "^39.2.7",
    "electron-builder": "^26.4.0",
    "electron-packager": "^17.1.2",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18"
  }
}
